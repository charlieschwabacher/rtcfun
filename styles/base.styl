@require "variables"

html,
body
  height 100%

body
  font font
  background bg-color
  color text-color
  margin 0
  padding 0

a
  text-decoration none
  cursor pointer
  color c1

.pull-left
  float left

.pull-right
  float right

.text-center
  text-align center

.app
  display flex
  flex-flow column nowrap
  width 100%
  height 100%

.header
  background c1
  color white
  flex-shrink 0
  display flex
  flex-fow row nowrap

.room,
.title
  color white
  padding margin

.room
  background darken(c1, 5%)
  cursor pointer
  display inline-block
  &:hover
    background darken(c1, 10%)
  &.active
    background darken(c1, 20%)
  .leave
    display inline-block
    margin-left margin

.main
  flex-grow 1
  display flex
  flex-flow row nowrap

.loading
  flex-grow 1
  display flex
  flex-flow column nowrap
  padding 2 * margin
  text-align center

.peers
  flex-shrink 0
  background darken(bg-color, 5)
  padding margin
  min-width 200px

  .user
    border-bottom solid 1px darken(bg-color, 10)
    margin 0 0 margin

    small
      padding 0 0 margin
      display block
      color light-text-color

.peer
  padding 0 0 margin

.messages
  display flex
  flex-flow column nowrap
  flex-grow 1

.message-list
  overflow-y scroll
  padding margin
  flex-grow 1

.message
  padding (margin / 2) 0
  border-bottom solid 1px darken(bg-color, 5)
  strong
    margin-right margin

img.avatar
  display inline-block
  margin-right margin
  height 24px
  vertical-align bottom

.message-form
  display flex
  flex-flow row nowrap
  padding margin
  flex-shrink 0

  input
    border none
    height 2em
    line-height 2em
    outline none
    font font

  input[type=text]
    flex-grow 1
    background white
    color text-color
    padding 0 margin

  input[type=submit]
    flex-shrink 0
    background c1
    color white
    padding 0 (margin * 2)
    cursor pointer
